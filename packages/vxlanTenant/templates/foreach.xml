<config-template xmlns="http://tail-f.com/ns/config/1.0">
<!---
  servicepoint="vxlanTenant-servicepoint">
-->
  <devices xmlns="http://tail-f.com/ns/ncs">
    <?foreach {/vtep}?>
    <device>
      <!--
          vtep config
      -->
      <name>{switch}</name>
      <?set myswitch={switch}?>

      <config>
<!-- l2vni --> 
        <vlan xmlns="http://tail-f.com/ned/cisco-nx">
          <vlan-list>
            <id>{/l2-vni/vlan-id}</id>
            <name>L2-VNI-{/l2-vni/vlan-id}-Tenant-{/name} ---> {$myswitch}</name>
            <vn-segment>{/vnid-prefix}{/l2-vni/vlan-id}</vn-segment>
          </vlan-list>
        </vlan>

<!-- l3vni --> 
        <vlan xmlns="http://tail-f.com/ned/cisco-nx">
          <vlan-list>
            <id>{/l3-vlanid}</id>
            <name>L3-VNI-{/l3-vlanid}-Tenant-{/name}</name>
            <vn-segment>{/vnid-prefix}{/l3-vlanid}</vn-segment>
          </vlan-list>
        </vlan>

      </config>
    </device>
    <?end?>
  </devices>
</config-template>
