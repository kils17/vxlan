<config xmlns="http://tail-f.com/ns/config/1.0">
  <vxlanInfra xmlns="http://example.com/vxlanInfra">
    <name>site1</name>
    <asn>65002</asn>
    <anycast-rp-ip>192.168.100.100</anycast-rp-ip>
    <anycast-group-list>239.0.0.0/24</anycast-group-list>
    <anycast-gw-mac>0000.2222.3333</anycast-gw-mac>
    <node>
      <switch>n9k-bdr1</switch>
      <type>leaf</type>
      <loopback0-ip>192.168.5.5</loopback0-ip>
      <vtep-ip>192.168.5.6</vtep-ip>
    </node>
    <node>
      <switch>n9k-leaf1</switch>
      <type>leaf</type>
      <loopback0-ip>192.168.3.3</loopback0-ip>
      <vtep-ip>192.168.3.4</vtep-ip>
    </node>
    <node>
      <switch>n9k-leaf2</switch>
      <type>leaf</type>
      <loopback0-ip>192.168.4.4</loopback0-ip>
      <vtep-ip>192.168.4.3</vtep-ip>
    </node>
    <node>
      <switch>n9k-spine1</switch>
      <type>spine</type>
      <loopback0-ip>192.168.1.1</loopback0-ip>
    </node>
    <link>
      <id>spine1-bdr1</id>
      <spine>
        <device>n9k-spine1</device>
        <port>1/3</port>
      </spine>
      <leaf>
        <device>n9k-bdr1</device>
        <port>1/1</port>
      </leaf>
    </link>
    <link>
      <id>spine1-leaf1</id>
      <spine>
        <device>n9k-spine1</device>
        <port>1/1</port>
      </spine>
      <leaf>
        <device>n9k-leaf1</device>
        <port>1/1</port>
      </leaf>
    </link>
    <link>
      <id>spine1-leaf2</id>
      <spine>
        <device>n9k-spine1</device>
        <port>1/2</port>
      </spine>
      <leaf>
        <device>n9k-leaf2</device>
        <port>1/1</port>
      </leaf>
    </link>
  </vxlanInfra>
</config>
